{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<body>
{% block javascripts %}
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
{% endblock %}
<div class="example-wrapper">
    <h1>Hello Search! âœ…</h1>
    <form id="search_form" name="search_form" method="post" action="{{ path('app_results') }}">
    <select id="client" name="client" onChange="getPointVente();" required="required">
    <option value=""> Choisir un client </option>
    {% for client in clients %}
        <option value="{{ client.id }}"> {{ client.fullname }} </option>
    {% endfor %}
    </select>
    <select id="point_vente" name="point_vente">
    </select>
    <input type="date" id="date_du" name="date_du" required="required"/>
    <input type="date" id="date_au" name="date_au" required="required"/>
    <input type="submit" id="submit_btn" name="submit_btn" value="Search"/>
    </form>
</div>
{% endblock %}
